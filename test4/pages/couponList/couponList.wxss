@import "./flex-util.wxss";
@import "./font-size.wxss";
@import "./color.wxss";

.coupon-list {
  height: 100vh;
  background-color: #F3F3F3;
  padding: 0 3.33333vw;
}

.coupon-item {
  margin-top: 21.5rpx;
  padding: 3vw 8vw 0.5vw 8vw;
  box-sizing: border-box;
  background-image: url('https://img.mobilemart.cn/ticket__background@2x.png');
  background-repeat: no-repeat;
  background-size: contain;
  box-shadow: 0 6rpx 16rpx -10rpx rgba(243,151,0, 0.5) ;
  width: 93.333vw;
  height: calc(93.333vw/7*2);
}

.coupon-item .main-title {
  color: #F39700;
  font-weight: bold;
}

.coupon-item .sub-title {
  color: #606060;
}

.coupon-item .amount {
  color: #D10303;
  font-weight: bold;
  text-align: center;
}

.coupon-item .explain {
  color: #999999;
}